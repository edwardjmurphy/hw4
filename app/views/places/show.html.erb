<h1><%= @place["name"] %></h1>

<div class="row">
<% if @current_user %>
<h2>My Posts</h2>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>"class="btn btn-success">Add a New Post</a>
</p>

<% for post in @posts %>
<div class="col-md-4 col-sm-8">
<div class="col text-center">
<div class="p-2 border bg-light">  
  <h3><%= post["title"] %></h3>
  <h5><%= post["posted_on"] %></h5>
    <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image)%>" class="img"  height="200" width="200" >
      <% else %>
        <img src="<%= post["image"] %>" class="img-fluid" height="200" width="200" >
      <% end %>
      <p><%= post["description"] %></p>
</div>
</div>
</div>
<% end %>
</div>


<% else %>
<p>

  You must <a href="/login">login</a> to add and view posts.
</p>

<% end %>

<p>
  <a href="/places"class="btn btn-secondary">Back to All Places</a>
</p>