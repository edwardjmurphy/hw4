<h1><%= @place["name"] %></h1>

<div class="row">
<% if @current_user %>
<h2>My Posts</h2>

<% for post in @posts %>
<div class="col-md-3 col-sm-6">

  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>
</div>
<% end %>
</div>
<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>


<% else %>
<p>

  You must <a href="/login">login</a> to add and view posts.
</p>

<% end %>

<p>
  <a href="/places">Back to All Places</a>
</p>